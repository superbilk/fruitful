%h2.text-center#question
  = @text["question"]
%ul.small-block-grid-1
  %li
    %a.large.button.expand.success.vote#positive{ :href => "", :data => { :vote => "1" } }
      = @text["positive"]
  %li
    %a.large.button.expand.alert.vote#negative{ :href => "", :data => { :vote => "-1" } }
      = @text["negative"]

#resultmodal.reveal-modal
  %h2= t.resultmodal.title
  %p.lead= t.resultmodal.lead

#editmodal.reveal-modal
  %h2= t.editmodal.title
  %form#editnameform
    %input#editname{:name => "editname", :type => "text", :value => @account ? @account.name : "" }
    %a.small.button#editsave{:href=>""}= t.editmodal.button
  %a.close-reveal-modal ×

#logoutmodal.reveal-modal
  %h2= t.logoutmodal.title
  %p.lead= t.logoutmodal.lead request.url
  %p
    %a.small.alert.button#logout{:href=> "#{@account.url}/logout"}= t.logoutmodal.button
  %a.close-reveal-modal ×

#proplanmodal.reveal-modal
  %h2= t.proplanmodal.title
  %p.lead1= t.proplanmodal.lead1
  %p.lead2= t.proplanmodal.lead2
  %p.lead3= t.proplanmodal.lead3
  %p= t.proplanmodal.contact
  %a.close-reveal-modal ×

#aboutmodal.reveal-modal
  %h2= t.aboutmodal.title
  %p.lead= t.aboutmodal.lead1
  %p= t.aboutmodal.text
  %p.lead= t.aboutmodal.lead2
  %img{:src => "/usecase.png"}
  %a.close-reveal-modal ×
